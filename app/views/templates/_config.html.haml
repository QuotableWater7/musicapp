%script{ type: 'text/template', id: 'config_template' }
  .row
    .col-md-10.col-md-offset-1
      %h3 Configuration
      .config
        .schedule-list


%script{ type: 'text/template', id: 'schedule_config_template' }
  .schedule.col-md-8.form-horizontal
    .form-group
      %label.control-label.col-md-4 Name
      .col-md-8
        %input.schedule-attribute.form-control{ data: { attribute: 'name' }, value: '{{= name }}' }
    .form-group
      %label.control-label.col-md-4 Duration (min)
      .col-md-4
        %input.duration.form-control.text-center{ data: { attribute: 'duration' }, value: '{{= duration }}' }
    .form-group
      %label.control-label.col-md-4 Break Time (min)
      .col-md-4
        %input.form-control.schedule-attribute.text-center{ data: { attribute: 'break_time' }, value: '{{= break_time }}' }
    .form-group
      .col-md-4.col-md-offset-4
        .btn.btn-primary Submit


